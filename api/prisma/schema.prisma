// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contato {
  id      String   @id @default(uuid())
  nome    String
  idade   Int
  numeros Numero[] 

  @@map("contatos")
}

model Numero {
  id        String   @id @default(uuid())
  numero    String
  Contato   Contato? @relation(fields: [contatoId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  contatoId String?

  @@map("numeros")
}
